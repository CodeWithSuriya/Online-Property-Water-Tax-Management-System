<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">

    <display-name>Online Property and Water Tax Management System</display-name>

    <!-- ================= SERVLET DEFINITIONS ================= -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>servlets.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>servlets.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/UserRegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PropertyServlet</servlet-name>
        <servlet-class>servlets.PropertyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PropertyServlet</servlet-name>
        <url-pattern>/PropertyServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>payNowServlet</servlet-name>
        <servlet-class>servlets.payNowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>payNowServlet</servlet-name>
        <url-pattern>/payNowServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>transstatus</servlet-name>
        <servlet-class>servlets.transstatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>transstatus</servlet-name>
        <url-pattern>/transstatus</url-pattern>
    </servlet-mapping>

    <!-- ================= WELCOME FILE ================= -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
